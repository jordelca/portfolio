{% extends 'backendbase.html.twig' %}

{% block content %}
    <h1>Certification</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ certification.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ certification.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ certification.date }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ certification.url }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ certification.file }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('certification_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('certification_edit', { 'id': certification.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
