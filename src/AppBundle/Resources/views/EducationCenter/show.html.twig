    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ educationCenter.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ educationCenter.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
